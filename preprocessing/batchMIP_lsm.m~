function [MIP, MIPidxtot] = batchMIP_lsm(inputdir, outputdir, channels, saveidx, tmax, positions)

    if ~exist('positions','var')
        positions = 1:numel(processnr);
    end

    if ~exist('tmax','var')
        tmax = meta.nTime;
    end

    for ci = 1:numel(channels)
        for pi = positions
            disp(['processing position ' num2str(pi) ', channel ' num2str(channels(ci))]);
            makeMIP_lsm(inputdir, pi-1, channels(ci), outputdir, saveidx(ci), tmax, type);
        end
    end
end